{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["prettier-plugin-astro"],
	"semi": true,
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"jsxSingleQuote": false,
	"quoteProps": "as-needed",
	"overrides": [
		{ "files": "*.astro", "options": { "parser": "astro" } },
		{ "files": "*.ts", "options": { "parser": "typescript" } },
		{ "files": "*.json", "options": { "parser": "json" } }
	]
}
